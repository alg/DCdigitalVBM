%h3= t :organization
%h4= t :date
.intro= t '.intro'

#options
  %p= t '.prompt'

  - %w( physical digital ).each do |option|
    .option{ :class => option }
      .num= t ".#{option}.num"
      .title= raw t(".#{option}.title")
      .summary= raw t(".#{option}.summary")
      %ul.steps
        - t(".#{option}.steps").split('|').each do |step|
          %li= raw step
      .commit= link_to "I want to try this option", overview_path(option), :class => "button"
