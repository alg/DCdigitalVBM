#step
  .title= tt ".title"
  .summary= tt ".summary"

.sidebar
  = render :partial => "shared/menu", :locals => { :selected => 0 }
  = render :partial => "shared/key_dates"

#area
  .main.last
    = tt ".info"
    = tt ".prompt"

    - simple_form_for :user, :url => check_in_path, :html => { :id => "check_in_form" } do |f|
      .field= f.input :name, :required => false
      .field= f.input :pin, :label => "PIN", :required => false
      .field= f.input :address_1, :label => "Address (Line 1)", :required => false
      .field= f.input :address_2, :label => "Address (Line 2)", :required => false
      .field= f.input :city, :required => false
      .field= f.input :state, :required => false
      .field= f.input :zip, :required => false
    
#navigation
  = link_to "Back", overview_path(voting_type), :class => "orange button"
  = link_to_function "Continue", "$('#check_in_form').submit()", :class => "orange button"
